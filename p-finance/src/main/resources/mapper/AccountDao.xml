<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doney.dao.AccountDao">

    <resultMap id="BaseResultMap" type="com.doney.entity.Account">
        <!--@Table account-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="accountName" column="account_name" jdbcType="VARCHAR"/>
        <result property="accountType" column="account_type" jdbcType="INTEGER"/>
        <result property="balance" column="balance" jdbcType="INTEGER"/>
    </resultMap>

    <!--加锁查询单个-->
    <select id="lockQueryById" resultMap="BaseResultMap">
        select
          id, account_name, account_type, balance
        from p_finance.account
        where id = #{id} for update
    </select>


</mapper>