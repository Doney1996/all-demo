<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doney.dao.RelAccountOrganzationDao">

    <resultMap id="BaseResultMap" type="com.doney.entity.RelAccountOrganzation">
        <!--@Table rel_account_organzation-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="accountId" column="account_id" jdbcType="INTEGER"/>
        <result property="organzationId" column="organzation_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, account_id, organzation_id
        from p_finance.rel_account_organzation
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, account_id, organzation_id
        from p_finance.rel_account_organzation
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, account_id, organzation_id
        from p_finance.rel_account_organzation
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="accountId != null">
                and account_id = #{accountId}
            </if>
            <if test="organzationId != null">
                and organzation_id = #{organzationId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into p_finance.rel_account_organzation(account_id, organzation_id)
        values (#{accountId}, #{organzationId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update p_finance.rel_account_organzation
        <set>
            <if test="accountId != null">
                account_id = #{accountId},
            </if>
            <if test="organzationId != null">
                organzation_id = #{organzationId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from p_finance.rel_account_organzation where id = #{id}
    </delete>

</mapper>